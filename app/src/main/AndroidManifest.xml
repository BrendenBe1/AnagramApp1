<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="brendenbernal.anagram">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".aboutPage"
            android:label="@string/title_activity_about_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".selectDifficulty"
            android:label="@string/title_activity_select_difficulty"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".playGame" />
        <activity android:name=".highScores" />
        <activity android:name=".viewResults"></activity>
    </application>

</manifest>