<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/holo_blue_dark"
    tools:context="brendenbernal.anagram.aboutPage">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:id="@+id/textViewAbout"
            android:textSize="36sp" />

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/textViewAbout"
            android:layout_marginBottom="19dp"
            android:background="@android:color/holo_blue_bright"
            android:id="@+id/buttonBackAbout" />

        <TextView
            android:text="Brenden Bernal and Brandon Samz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView14"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Developers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/textView14"
            android:textSize="30sp"
            android:layout_below="@+id/textViewAbout"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:text="How To PLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="30sp"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:text='Select a level of difficulty, either "Easy", "Intermediate", or "Hard" for a time of 30, 15, or 10 seconds respectively'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/textView12"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:layout_below="@+id/textView11"
            android:layout_alignStart="@+id/textView11" />

        <TextView
            android:text="Make as many words as you can with the provided 8 letters in the amount of time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:id="@+id/textView13"
            android:textSize="24sp"
            android:layout_below="@+id/textView12"
            android:layout_alignStart="@+id/textView12" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
