<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_dark"
    tools:context="brendenbernal.anagram.MainActivity">

    <TextView
        android:text="ANAGRAMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/Title"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@color/colorPrimaryDark" />


    <Button
        android:text=" High Score "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHighScore"
        android:textSize="24sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginEnd="23dp"
        android:layout_alignBaseline="@+id/buttonAbout"
        android:layout_alignBottom="@+id/buttonAbout"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:id="@+id/buttonAbout"
        android:textSize="24sp"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/buttonPlay"
        android:layout_toStartOf="@+id/buttonPlay" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:id="@+id/buttonPlay"
        android:textSize="24sp"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
